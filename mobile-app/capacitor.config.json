{
    "appId": "com.nexofinanzas.nexobot",
    "appName": "NexoBot",
    "webDir": "www",
    "server": {
        "cleartext": true
    },
    "plugins": {
        "SplashScreen": {
            "launchShowDuration": 2000,
            "backgroundColor": "#0a0a0f",
            "showSpinner": true,
            "spinnerColor": "#6C5CE7"
        },
        "StatusBar": {
            "style": "DARK",
            "backgroundColor": "#0a0a0f"
        }
    },
    "android": {
        "allowMixedContent": true,
        "backgroundColor": "#0a0a0f"
    }
}